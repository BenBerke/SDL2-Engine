{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SDL2 app",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-I",
                "${workspaceFolder}\\include",
                "-I",
                "${workspaceFolder}\\src\\include",
                "-L",
                "${workspaceFolder}\\src\\lib",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\GameObject.cpp",
                "${workspaceFolder}\\src\\Renderer.cpp",
                "${workspaceFolder}\\src\\glad.c",
                "-o",
                "${workspaceFolder}\\bin\\ecs.exe",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build and Run SDL2 app",
            "type": "shell",
            "dependsOn": "Build SDL2 app",
            "dependsOrder": "sequence",
            "command": "${workspaceFolder}\\bin\\ecs.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "clear": true
            }
        }
    ]
}
