{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make: Debug",
            "type": "shell",
            "command": "C:\\\\msys64\\\\usr\\\\bin\\\\make.exe",
            "args": ["CONFIG=Debug"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Make: Release",
            "type": "shell",
            "command": "C:\\\\msys64\\\\usr\\\\bin\\\\make.exe",
            "args": ["CONFIG=Release"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Make: Unity (Debug)",
            "type": "shell",
            "command": "C:\\\\msys64\\\\usr\\\\bin\\\\make.exe",
            "args": ["CONFIG=Debug", "unity"],
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run Debug build",
            "type": "shell",
            "command": "${workspaceFolder}\\bin\\Debug\\ecs.exe",
            "dependsOn": "Make: Debug",
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${workspaceFolder}\\\\bin;C:\\\\msys64\\\\ucrt64\\\\bin;${env:PATH}"
                }
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Run Debug",
            "type": "shell",
            "command": "${workspaceFolder}\\bin\\Debug\\ecs.exe",
            "dependsOn": "Make: Debug",
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${workspaceFolder}\\\\bin;C:\\\\msys64\\\\ucrt64\\\\bin;${env:PATH}"
                }
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "clear": true
            },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": []
        }
    ]
}
